    <script>
      // alert('Welcome to my website')

      const topMenu = document.getElementById("nav-menu");
      const toggleTopMenuIcon = document.getElementById("nav-menu-toggle");

      document.addEventListener("click", (e) => {
        if (toggleTopMenuIcon.contains(e.target)) {
          topMenu.classList.toggle("hidden");
          topMenu.classList.toggle("top-menu-expanded");
        } else {
          if (topMenu.classList.contains("top-menu-expanded")) {
            topMenu.classList.remove("top-menu-expanded");
            topMenu.classList.add("hidden");
          }
        }
      });

      var userAvt = document.getElementById("user");

      var userIn = document.getElementById("user-interface");

      document.addEventListener("click", (e) => {
        if (userAvt.contains(e.target)) {
          userIn.classList.toggle("hidden");
          userIn.classList.toggle("block");
        } else {
          if (userIn.classList.contains("block")) {
            userIn.classList.remove("block");
            userIn.classList.add("hidden");
          }
        }
      });

      var maps = document.getElementById("digitial-map");

      var slMap = document.getElementById("selection");

      document.addEventListener("click", (e) => {
        if (maps.contains(e.target)) {
          slMap.classList.toggle("hidden");
          slMap.classList.toggle("block");
        } else {
          if (slMap.classList.contains("block")) {
            slMap.classList.remove("block");
            slMap.classList.add("hidden");
          }
        }
      });
    </script>
