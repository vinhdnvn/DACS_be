            </ul>

            <!-- User -->
          
            <div id="user" class="basis-2/6 lg:basis-1/6 hover:cursor-pointer">
             
              <div>
                <% if (user) { %>
                  <div class="w-12 h-12 bg-black rounded-full"></div>
                <div
                  id="user-interface"
                  class="hidden w-[200px] h-[120px] bg-white absolute top-14 shadow-inner"
                >
                  <div class="px-3 py-3">
                    <span><%= user.email %></span>
                  </div>
                  <hr />
                  <div class="text-sm font-normal">
                    <div
                      class="text-sm px-3 py-2 font-normal hover:bg-slate-200"
                    >
                    <a href="/blogs/<%=user._id%>"><span>Profile</span></a>
                    </div>
                    <div
                      class="logout px-3 py-2 flex gap-1 items-center hover:bg-slate-200"
                    >
                    <a href="/logout"><span>Logout</span></a>
                      <i class="fa-sharp fa-solid fa-right-to-bracket"></i>
                    </div>
                  </div>
                </div>
                <% } else { %>
                <div class="flex flex-row gap-2">
                  <div class="px-2 py-1 bg-black text-white hover:bg-gray-200 hover:text-black"><a href="/login">Login</a></div>
                  <div class="px-2 py-1 bg-black text-white hover:bg-gray-200 hover:text-black"><a href="/signup">SignUp</a></div></div>
                <% } %>
