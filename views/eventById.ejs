<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="eventCard flex flex-col">
      <div class="grid grid-cols-4 gap-4">
        <% x.forEach((y)=> { %>
        <div class="container flex flex-col justify-center">
          <div class="date text-center">
            <p><%=y.createUpdate%></p>
          </div>
          <div class="imageDiv flex justify-center">
            <img
              class="h-[380px] w-[260px]"
              src="http://localhost:5000/<%=y.eventImage%>"
              alt="anh da bi an"
            />
          </div>
          <div class="detailEvent flex flex-col justify-center">
            <div class="nameEvent text-center">
              <a href=""><%=y.name%></a>
            </div>
            <div class="typeEvent text-center">
              <a href=""><%=y.eventType%></a>
            </div>
            <div class="postedBy text-center">
              <!-- <a href=""><%=y.postedBy%></a> -->
            </div>
          </div>
        </div>

        <% }) %>
      </div>
      <div>
        <button
          class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
        >
          <a href="/addevent">Add </a>
        </button>
      </div>
    </div>
  </body>
</html>
